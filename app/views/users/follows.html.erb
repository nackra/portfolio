<h2>Follows</h2>
<table class='table'>
    <thead>
      <tr>
        <th>Image</th>
        <th>name</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
            <td>
              <%= link_to user_path(user) do %>
                <% if user.image.attached? %>
                 <%= image_tag user.image, size: "100x100", class: "rounded-circle" %>
                <% else %>
                 <%= image_tag 'no_image', size: "100x100", class: "rounded-circle" %>
                <% end %>
              <% end %>
            </td>
            <td><%= user.name %></td>
            <td>フォロー:<%= user.followers.count %></td>
            <td>フォロワー:<%= user.followeds.count %> </td>
        </tr>
      <% end %>
    </tbody>
</table>